<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#F6F6F6"/>
                    <corners android:radius="3dp"/>


                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="10dp"/>
                    <gradient
                        android:startColor="#FFFFFF"
                        android:centerColor="#FFFFFF"
                        android:endColor="#FFFFFF"
                        android:angle="270" />
                    <corners
                        android:radius="3dp"/>
                    <stroke android:width="1px" android:color="#F0F0F0" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#F8F8F8"/>
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#F8F8F8"
                        android:endColor="#F8F8F8"
                        android:angle="270" />
                    <corners
                        android:radius="3dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>

    </item>
</selector>