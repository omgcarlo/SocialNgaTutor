<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#006666"/>
                    <corners android:radius="50dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="10dp"/>
                    <gradient
                        android:startColor="#009688"
                        android:endColor="#006666"
                        android:angle="270" />
                    <corners
                        android:radius="50dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#F8F8F8"/>
                    <corners android:radius="50dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#B2DFDB"
                        android:endColor="#B2DFDB"
                        android:angle="270" />
                    <corners
                        android:radius="50dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>

    </item>
</selector>
