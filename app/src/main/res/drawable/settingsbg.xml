<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#F8F8F8"/>
                    <corners android:radius="1dp"/>


                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#F8F8F8"
                        android:endColor="#F8F8F8"
                        android:angle="270" />
                    <corners
                        android:radius="1dp"/>
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#E0E0E0"/>
                    <corners android:radius="1dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#E0E0E0"
                        android:endColor="#E0E0E0"
                        android:angle="270" />
                    <corners
                        android:radius="1dp"/>
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"/>
                </shape>
            </item>
        </layer-list>

    </item>
</selector>

