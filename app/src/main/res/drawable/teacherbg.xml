<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#e6d305"/>
                    <corners android:radius="500dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="10dp"/>
                    <gradient
                        android:startColor="#e6d305"
                        android:endColor="#e6d305"
                        android:angle="270" />
                    <corners
                        android:radius="200dp"/>
                    <padding
                        android:left="8dp"
                        android:top="5dp"
                        android:right="8dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#F8F8F8"/>
                    <corners android:radius="150dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#F8F8F8"
                        android:endColor="#F8F8F8"
                        android:angle="270" />
                    <corners
                        android:radius="50dp"/>
                    <padding
                        android:left="8dp"
                        android:top="5dp"
                        android:right="8dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
        </layer-list>

    </item>
</selector>
