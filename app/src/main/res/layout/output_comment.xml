<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/commentbg"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/c_ppicture"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                fresco:placeholderImage="@drawable/icon_user_default"
                fresco:roundAsCircle="true" />
            <ImageButton
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/checkmark"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="270dp"
                android:background="#FFFFFF"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="-10dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

              <TextView
                    android:id="@+id/c_fullname"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Meynard Inso"
                    android:textColor="#0066CC"
                    android:textSize="18sp" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:background="#FFFFFF"/>
                <TextView
                    android:id="@+id/c_username"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:layout_marginTop="15dp"
                    android:text="\@username"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="-50dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


            </LinearLayout>

            <TextView
                android:id="@+id/c_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="35dp"
                android:text="@string/commentsample" />
        </RelativeLayout>




            <TextView
                android:id="@+id/c_userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/ic_share"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/lightgrey"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/c_isFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/ic_share"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/lightgrey"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/c_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                android:text="5 hours ago"
                android:layout_marginBottom="5dp"
                android:textColor="@color/lightgrey"
                android:gravity="right"
                android:textSize="8sp" />

    </LinearLayout>
</RelativeLayout>