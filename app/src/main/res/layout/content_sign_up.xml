<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.incc.softwareproject.socialngatutor.SignUpActivity"
    tools:showIn="@layout/activity_sign_up">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pp_btn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/ppdefault"
                android:scaleType="centerCrop"
                android:contentDescription="Press to Upload Picture"
                android:onClick="uploadPPBtn"/>
            <EditText
                android:id="@+id/s_schoolId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="School Id"/>
            <EditText
                android:id="@+id/s_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Username"/>
            <EditText
                android:id="@+id/s_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="textPassword"
                android:hint="Password"/>
            <EditText
                android:id="@+id/s_rpassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="textPassword"
                android:hint="Repeat Password"/>
            <EditText
                android:id="@+id/s_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Email"/>
            <EditText
                android:id="@+id/s_fullname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Full Name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:text="Birthdate"
                android:textSize="18sp"
                android:textColor="@color/black_overlay"/>
            <DatePicker

                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:id="@+id/brithdatePicker"
                android:calendarViewShown="false"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
