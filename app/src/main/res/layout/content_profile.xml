<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.incc.softwareproject.socialngatutor.ProfileActivity"
    tools:showIn="@layout/activity_profile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:contentDescription="banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="-50dp"
                android:src="@drawable/banner1"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:scaleType="fitXY"
                android:layout_marginTop="-245dp"
                fresco:placeholderImage="@drawable/chieni"
                fresco:roundAsCircle="true"
                android:layout_gravity="center"
                android:elevation="4dp"/>
            <TextView
                android:id="@+id/profile_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meynard Inso"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:textSize="23sp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@meynardgwapo"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"/>


            <Button
                android:id="@+id/profile_btnFollow"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Follow"
                android:textColor="#FFFFFF"
                android:drawableLeft="@drawable/ic_check_circle"
                android:background="@drawable/button_signup_w_shadow"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/profile_followers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1,202 followers"
                    android:textColor="#989898"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textColor="#A0A0A0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="27sp"
                    />

                <TextView
                    android:id="@+id/profile_followings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1,120 following"
                    android:textColor="#989898"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:text="POST"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:background="#F0F0F0"
                android:textSize="23sp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>