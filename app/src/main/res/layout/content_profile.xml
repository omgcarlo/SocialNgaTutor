<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.incc.softwareproject.socialngatutor.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="-50dp"
                android:contentDescription="banner"
                android:src="@drawable/banner1" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="120dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_marginTop="-245dp"
                android:elevation="4dp"
                android:scaleType="fitXY"
                fresco:placeholderImage="@drawable/chieni"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/profile_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Meynard Inso"
                android:textColor="#FFFFFF"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\@meynardgwapo"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/profile_btnFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text=" FOLLOW"
                android:drawableLeft="@drawable/ic_check_circle"
                android:background="@drawable/circle"
                android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/profile_followers"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1,202 followers"
                android:textColor="#989898"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="|"
                android:textColor="#A0A0A0"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/profile_followings"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1,120 following"
                android:textColor="#989898"
                android:textSize="16sp" />
        </LinearLayout>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#F0F0F0"
                android:text="                             POST"
                android:textColor="#000000"
                android:textSize="23sp" />


        </LinearLayout>


    </ScrollView>

</RelativeLayout>

