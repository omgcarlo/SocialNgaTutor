<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/card_ppicture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                fresco:placeholderImage="@drawable/icon_user_default"
                fresco:roundAsCircle="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="-10dp">


                <TextView
                    android:id="@+id/card_fullname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:text="@string/loading_txt"
                    android:textSize="20sp"/>

                <ImageButton
                    android:id="@+id/card_options"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="12dp"
                    android:text="Share"
                    android:background="#F8F8F8"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="-50dp">
                <TextView
                    android:id="@+id/card_username"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:textColor="#9a9a9a"
                    android:textSize="13sp"
                    android:text="@string/loading_txt"/>
                <TextView
                    android:id="@+id/card_datetime"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:textColor="#9a9a9a"
                    android:layout_marginLeft="110dp"
                    android:textSize="11sp"
                    android:text="@string/loading_txt"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/card_post_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/commentsample"/>
                <LinearLayout
                    android:id="@+id/card_post_file"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/bgGrey"
                    android:visibility="gone"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/card_file_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_attach_file"
                        android:layout_gravity="center"
                        android:text="File here"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/share_card_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/share_card_ppicture"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                fresco:placeholderImage="@drawable/icon_user_default"
                                fresco:roundAsCircle="true" />
                            <TextView
                                android:id="@+id/share_card_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="65dp"
                                android:text="T"
                                android:visibility="gone"
                                android:gravity="center"
                                android:textSize="8sp"
                                android:textColor="@color/white"
                                android:background="@drawable/teacherbg" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_marginTop="0dp"
                                android:layout_marginLeft="72dp"
                                android:layout_marginRight="-10dp">
                                <TextView
                                    android:id="@+id/share_card_fullname"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:gravity="center_vertical"
                                    android:padding="8dp"
                                    style="@style/Base.TextAppearance.AppCompat.Body2"
                                    android:text="@string/loading_txt"
                                    android:textSize="17sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="-50dp"
                                android:id="@+id/linearLayout">
                                <TextView
                                    android:id="@+id/share_card_username"
                                    android:layout_width="0dp"
                                    android:layout_weight="7"
                                    android:layout_height="match_parent"
                                    android:textColor="#9a9a9a"
                                    android:textSize="11sp"
                                    android:text="@string/loading_txt"/>
                                <TextView
                                    android:id="@+id/share_card_datetime"
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="match_parent"
                                    android:gravity="left"
                                    android:textColor="#9a9a9a"
                                    android:layout_marginLeft="110dp"
                                    android:textSize="9sp"
                                    android:text="@string/loading_txt"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="62dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="13dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/share_card_post_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/loading_txt"/>

                                <android.support.v7.widget.CardView
                                    android:id="@+id/share_card_post_file"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@color/bgGrey"
                                    android:visibility="gone"
                                    android:layout_marginTop="10dp">
                                    <TextView
                                        android:id="@+id/share_card_file_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableLeft="@drawable/ic_attach_file"
                                        android:layout_gravity="center"
                                        android:text="File here"/>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>

                            <ProgressBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/share_progressbar"
                                android:layout_alignBottom="@+id/share_card_ppicture"
                                android:layout_alignRight="@+id/share_card_ppicture"
                                android:layout_alignEnd="@+id/share_card_ppicture"
                                android:indeterminate="false" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp">


            <TextView
                android:id="@+id/card_upvotes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_navigationsmall"
                android:backgroundTint="@color/black"
                android:textSize="10sp"
                android:textColor="#1c84a7"/>

            <TextView
                android:id="@+id/card_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:textSize="10sp"
                android:drawableLeft="@drawable/ic_commentsmall"
                android:textColor="#1c84a7"/>
            <TextView
                android:id="@+id/card_shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:textSize="10sp"
                android:drawableLeft="@drawable/ic_sharesmall"
                android:textColor="#1c84a7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="T"
                android:visibility="gone"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/teacherbg" />

        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:background="@color/bgGrey">
            <ImageButton
                android:id="@+id/pt_upvoteBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/postbuttonbg"
                android:src="@drawable/ic_navigation"/>
            <ImageButton
                android:id="@+id/pt_commentBtn"
                android:src="@drawable/ic_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/postbuttonbg"
                android:text="Comment"/>
            <ImageButton
                android:id="@+id/pt_shareBtn"
                android:src="@drawable/ic_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/postbuttonbg"
                android:text="Share"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/pt_upvoteBtn2"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_navigations"
            android:background="@drawable/upvotebg"
            android:visibility="invisible"
            android:layout_marginTop="-45dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>