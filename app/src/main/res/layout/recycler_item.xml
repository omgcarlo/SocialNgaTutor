<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/card_ppicture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                fresco:placeholderImage="@drawable/icon_user_default"
                fresco:roundAsCircle="true" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="-10dp">

                <TextView
                    android:id="@+id/card_fullname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:text="Meynard Inso"
                    android:textSize="20sp"/>

                <ImageButton
                    android:id="@+id/card_options"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Share"
                    android:background="#F8F8F8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="-50dp">
                <TextView
                    android:id="@+id/card_username"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:textColor="#9a9a9a"
                    android:textSize="13sp"
                    android:text="\@meynardgwapo"/>
                <TextView
                    android:id="@+id/card_datetime"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:textColor="#9a9a9a"
                    android:layout_marginLeft="110dp"
                    android:textSize="11sp"
                    android:text="11h"/>
            </LinearLayout>
            <TextView
                android:id="@+id/card_post_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/commentsample"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginTop="17dp"
            android:background="@color/bgGrey">
            <ImageButton
                android:id="@+id/pt_upvoteBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/postbuttonbg"
                android:src="@drawable/ic_navigation"/>
            <ImageButton
                android:id="@+id/pt_commentBtn"
                android:src="@drawable/ic_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/postbuttonbg"
                android:text="Comment"/>
            <ImageButton
                android:id="@+id/pt_shareBtn"
                android:src="@drawable/ic_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/postbuttonbg"
                android:text="Share"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/pt_upvoteBtn2"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_navigations"
            android:background="@drawable/upvotebg"
            android:visibility="invisible"
            android:layout_marginTop="-45dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>