<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/e_pp_btn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                fresco:roundAsCircle="true"
                fresco:placeholderImage="@drawable/icon_user_default"
                android:layout_marginTop="40dp"
                android:contentDescription="Press to Upload Picture"/>

            <EditText
                android:layout_marginLeft="35dp"
                android:layout_marginRight="45dp"
                android:id="@+id/e_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="New Username"/>
            <EditText
                android:layout_marginLeft="35dp"
                android:layout_marginRight="45dp"
                android:id="@+id/e_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:inputType="textPassword"
                android:hint="New Password"/>

            <EditText
                android:layout_marginLeft="35dp"
                android:layout_marginRight="45dp"
                android:id="@+id/e_fullname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Full Name"/>
            <TextView
                android:layout_marginLeft="35dp"
                android:layout_marginRight="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=" Birthdate"
                android:textSize="18sp"
                android:textColor="#808080"/>
            <DatePicker

                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:id="@+id/e_brithdatePicker"
                android:calendarViewShown="false"
                android:layout_marginTop="8dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>