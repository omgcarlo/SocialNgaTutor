<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/banner1"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="35dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp">
            <EditText
                android:id="@+id/search_text"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:hint="Search"
                android:drawableLeft="@drawable/ic_search"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/t2_people"
            android:layout_width="295dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:drawableLeft="@drawable/ic_people"
            android:onClick="searchBtns"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="PEOPLE"
            android:background="@drawable/explore"/>
        <Button
            android:id="@+id/t2_topics"
            android:layout_width="295dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_assignment"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:onClick="searchBtns"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="TOPICS"
            android:background="@drawable/explore"/>
        <Button
            android:id="@+id/t2_help"
            android:layout_width="295dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:onClick="searchBtns"
            android:drawableLeft="@drawable/ic_help"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="HELP"
            android:background="@drawable/explore"/>
        <Button
            android:id="@+id/t2_discover"
            android:layout_width="295dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:onClick="searchBtns"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_remove_red_eye"
            android:text="DISCOVER"
            android:background="@drawable/explore"/>

    </LinearLayout>
</ScrollView>



</RelativeLayout>

